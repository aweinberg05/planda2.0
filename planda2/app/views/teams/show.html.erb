
<div class="row">
  <div class="col s5">
    <h1><%= @team["name"]%></h1>
  </div>

</div>
<h4>Members:</h4>
<div class="row">
  <% @users.each do |user|%>
    <div class="col s3">
      <%=user["name"]%><br>
      </div>
  <% end %>
  </div>

<h4>Team Tasks:</h4>
<a href="/tasks/new"> Add a New Task </a><br><br>
<div class="row">
  <div id='once' class="col s4">
    <h5 style="text-align:center">Once:</h5>
    <div class="row">

      <div id='onceToDo' class="col s6">
        <h6 style="text-align:center">To Do:</h6>

        <% @onceTasksToDo.each do |task|%>
          <span class="white-text"><a href="/tasks/<%=task["id"]%>">
            <div class="row">
              <div class="col s12">
                <div class="card-panel black">
                  <%=task["name"]%>
                </div>
              </div>
            </div></a></span>
        <% end %>
      </div>
      <div id='onceDone' class="col s6">
        <h6 style="text-align:center">Done:</h6>
        <% @onceTasksDone.each do |task|%>
          <span class="white-text"><a href="/tasks/<%=task["id"]%>">
            <div class="row">
              <div class="col s12">
                <div class="card-panel black">
                  <%=task["name"]%>
                </div>
              </div>
            </div></a></span>
        <% end %>
      </div>
    </div>
  </div>

  <div id='daily' class="col s4">
    <h5 style="text-align:center">Daily:</h5>
    <div class="row">
      <div id='dailyToDo' class="col s6">
        <h6 style="text-align:center">To Do:</h6>
        <% @dayTasksToDo.each do |task|%>
          <span class="white-text"><a href="/tasks/<%=task["id"]%>">
            <div class="row">
              <div class="col s12">
                <div class="card-panel black">
                  <%=task["name"]%>
                </div>
              </div>
            </div></a></span>
        <% end %>
      </div>
      <div id='dailyDone' class="col s6">
        <h6 style="text-align:center">Done:</h6>
        <% @dayTasksDone.each do |task|%>
          <span class="white-text"><a href="/tasks/<%=task["id"]%>">
            <div class="row">
              <div class="col s12">
                <div class="card-panel black">
                  <%=task["name"]%>
                </div>
              </div>
            </div></a></span>
        <% end %>
      </div>
    </div>
  </div>

  <div id='weekly' class="col s4">
    <h5 style="text-align:center">Weekly:</h5>
      <div class="row">
        <div id='weeklyToDo' class="col s6">
         <h6 style="text-align:center">To Do:</h6>
          <% @weekTasksToDo.each do |task|%>
            <span class="white-text"><a href="/tasks/<%=task["id"]%>">
              <div class="row">
                <div class="col s12">
                  <div class="card-panel black">
                    <%=task["name"]%>
                  </div>
                </div>
              </div></a></span>
          <% end %>
        </div>
        <div id='weeklyDone' class="col s6">
          <h6 style="text-align:center">Done:</h6>
          <% @weekTasksDone.each do |task|%>
            <span class="white-text"><a href="/tasks/<%=task["id"]%>">
              <div class="row">
                <div class="col s12">
                  <div class="card-panel black">
                    <%=task["name"]%>
                  </div>
                </div>
              </div></a></span>
          <% end %>
        </div>
      </div>
    </div>
</div>


<div class = "input-field">
    <%= button_to 'Delete Team', destroy_teams_path(:team_id => @team.id), method: :delete, class: 'btn waves-effect waves-light', data: {:confirm => 'Are you sure?'} %>
</div>


<a href="/teams"> Back to your teams </a>



